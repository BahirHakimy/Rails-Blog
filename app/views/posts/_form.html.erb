<%= form_with model: @post, url: url, local: true, html: { class: "form" },data: { turbo: false } do |f| %>
  <%= f.text_field :title, class: "form-input", placeholder: :title %>
  <%= f.text_area :text, class: "form-input", placeholder: :text %>
  <%= f.hidden_field :author_id, value: current_user.id %>
  <%= f.submit class: "form-submit" %>
<% end %>
