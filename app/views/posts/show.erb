<div class="post-card">
  <div class='post-meta'>
  <h3 class="post-title"><%= @post.title -%> by <%= @post.author.name -%></h3>
  <span class="post-header">
    Comments: <%= @post.comments_counter -%>, Likes: <%= @post.likes_counter -%>
  </span>
  </div>
  <p><%= @post.text -%></p>
</div>
<div style="display:flex"> 
  <a href="<%=create_like_path(user_id:current_user.id,id:@post.id)  %>" class="comment-button">Add Like</a>
  <a href="<%=new_comment_path(user_id:current_user.id,id:@post.id)  %>" class="comment-button">Add Comment</a>
</div>

   <%= render partial: 'posts/comments', locals:{comments:@post.comments}%> 