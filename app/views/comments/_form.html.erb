<%= form_with model: @comment, url: url, local: true, html: { class: "form" },data: { turbo: false } do |f| %>
  <%= f.text_area :text, class: "form-input", placeholder: :text %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :post_id, value: post.id %>
  <%= f.submit class: "form-submit" %>
<% end %>
